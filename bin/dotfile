#!/usr/bin/env python3
import sys
import Command
import Dotfile as DF
from Dotfile import Dotfile, Dotfiles, DotfileExecuter

DF.Dotfile_local_home = '/home/josh'
dotfiles = Dotfiles([
    Dotfile(
        name = 'wofi',
        path = '~/.config/wofi/',
        local_path='~/dotfiles/wofi/',
        files = [
            'config'
        ],
    ),
    Dotfile(
        name = 'waybar',
        path = '~/.config/waybar/',
        local_path='~/dotfiles/waybar/',
        files = [
            'config',
            'style.css'
        ]
    ),
    Dotfile(
        name = 'awesome',
        path = '~/.config/awesome/',
        local_path = '~/dotfiles/awesome/',
        files = [
            'rc.lua',
            ('theme.lua', 'themes/default/theme.lua')
        ],
        extra_cmds = [
            ['cp', '-r', '/usr/share/awesome/icons', '~/.config/awesome/'],
            ['cp', '-r', '/usr/share/awesome/themes/default/taglist', '~/.config/awesome/themes/default/']
        ]
    ),
    Dotfile('.bashrc'),
    Dotfile('.vimrc'),
    Dotfile('.xinitrc'),
    Dotfile('.Xresources'),
    Dotfile('.zshrc'),
    Dotfile('.bash_profile')
])

def main():
    DotfileExecuter.dotfile_list = dotfiles
    Command.Command(sys.argv, DotfileExecuter.fn_map)
    
if __name__ == '__main__':
    main()